{
    "swagger": "2.0",
    "info": {
        "title": "Azure IOT End-to-End Test Wrapper Rest Api",
        "version": "1.0.0"
    },
    "schemes": [
        "https"
    ],
    "produces": [
        "application/json"
    ],
    "tags": [
        {
            "name": "net",
            "description": "network control APIs"
        }
    ],
    "paths": {
        "/net/setDestination/{ip}/{transportType}": {
            "put": {
                "tags": [
                    "net"
                ],
                "summary": "Set destination for net disconnect ops",
                "operationId": "Net_SetDestination",
                "parameters": [
                    {
                        "name": "ip",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "$ref": "parameters.json#/transportType"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/net/disconnect/{disconnectType}": {
            "put": {
                "tags": [
                    "net"
                ],
                "summary": "Simulate a network disconnection",
                "operationId": "Net_Disconnect",
                "parameters": [
                    {
                        "$ref": "parameters.json#/disconnectType"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/net/reconnect": {
            "put": {
                "tags": [
                    "net"
                ],
                "summary": "Reconnect the network after a simulated network disconnection",
                "operationId": "Net_Reconnect",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/control/systemStats/{pid}": {
            "get": {
                "tags": [
                    "net"
                ],
                "summary": "Get statistics about the operation of the operating system",
                "operationId": "Net_GetSystemStats",
                "parameters": [
                    {
                        "$ref": "parameters.json#/pid"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}
